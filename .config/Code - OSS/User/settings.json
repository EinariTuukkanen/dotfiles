{
  "workbench.colorTheme": "Neofloss",
  "editor.rulers": [80],
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSave": true,
  "editor.fontFamily": "'Fira Code', 'Font Awesome 5 Brands', 'Font Awesome 5 Free', 'Font Awesome 5 Free Solid', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "terminal.integrated.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "window.menuBarVisibility": "toggle",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "workbench.statusBar.visible": true,
  "workbench.colorCustomizations": {
    "[Neofloss]": {
      "tab.activeBorder": "#44D1B9",
      "tab.inactiveBackground": "#282529"
    }
  }
}
