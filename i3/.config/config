#---------------#
# SPECIAL CASES #
#---------------#

# feh
for_window [class="feh"] floating enable
for_window [class="feh"] move absolute position center

# scratchpads
for_window [instance="urxvt_scratchpad"] floating enable, resize set 1366px 250px, move position 0px 0px, move scratchpad, sticky enable, border pixel 1px

