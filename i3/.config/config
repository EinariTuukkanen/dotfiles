#--------#
# BASICS #
#--------#

# mod
set $mod Mod4

# font
font pango:Hack 14

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# window focus
focus_follows_mouse yes

# drag floating key
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym F11 fullscreen toggle

# toggle tiling / floating
bindsym $mod+f floating toggle

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
bindsym $mod+d exec --no-startup-id rofi -show run

# urxvt
bindsym $mod+Return exec --no-startup-id urxvt
# bindsym $mod+Tab exec --no-startup-id urxvt -name floating
bindsym $mod+e exec --no-startup-id urxvt -pe tabbedex -name urxvt_scratchpad

# drawing urxvt
bindsym $mod+t exec --no-startup-id ~/Scripts/urdraw.sh

# restart i3 in place
bindsym $mod+Shift+r restart

# print screen
bindsym Print exec --no-startup-id scrot

# lock i3
bindsym $mod+l exec --no-startup-id ~/Scripts/lock.sh

# exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# dropdown terminal
bindsym F1 scratchpad show

# cycle through last workspaces
bindsym Mod1+Tab workspace back_and_forth
# bindsym Mod1+Tab workspace back_and_forth
# bindsym Mod1+Shift+Tab workspace next

# bindsym F3 exec urxvt -geometry 80x3 -name 'bashrun' -e sh -c "/bin/bash -i -t"

# tdrop
# bindsym $mod+p exec "tdrop -a -m -w 90% -h 30% -y 42 -x 5% urxvt"

#------#
# GAPS #
#------#

gaps inner 10
gaps outer 10
# bindsym $mod+o gaps outer current set 10; gaps inner current set 30
# bindsym $mod+i gaps outer current set 0; gaps inner current set 10

#------------#
# APPEARANCE #
#------------#

# window border
for_window [class="^.*"] border pixel 0

for_window [class="albert"] floating enable, border pixel 1, sticky enable

#for_window [class=".*"] title_format "<span font='Hack 10'> > %title</span>"
# class				border		background	text		indicator	child border
client.focused          	#		#		#	 	#		#
client.unfocused        	#		#		#		#		#
client.focused_inactive 	#		#		#		#		#
client.urgent           	#		#		#		#		#
client.background 		#

#----------------------#
# STARTUP APPLICATIONS #
#----------------------#

# dropdown urxvt
exec --no-startup-id urxvt -name urxvt_scratchpad

# albert
exec_always --no-startup-id albert

# top bar
exec_always --no-startup-id ~/Scripts/bar.sh

# configs (urxvt style etc.)
exec_always --no-startup-id xrdb ~/.Xresources

